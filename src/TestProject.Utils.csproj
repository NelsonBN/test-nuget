<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ProjectGuid>{E06D8F3D-6B30-45B3-B696-04DB18A0E255}</ProjectGuid>

    <CurrentYear>$([System.DateTime]::UtcNow.ToString(yyyy))</CurrentYear>


    <!-- Assembly and projecto details -->
    <!-- https://docs.microsoft.com/en-us/dotnet/standard/frameworks -->
    <TargetFrameworks>net6.0;net5.0;netcoreapp3.1</TargetFrameworks>


    <RootNamespace>TestProject.Utils</RootNamespace>
    <AssemblyName>TestProject.Utils</AssemblyName>


    <!-- Package details -->
    <PackageId>TestProject.Utils</PackageId>
    <title>TestProject.Utils</title>
    <Product>TestProject.Utils</Product>
    <Version>1.1.2</Version>

    <Authors>Nelson Nobre</Authors>
    <Company>NelsonBN</Company>

    <License>MIT</License>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Copyright>Copyright Â© $(CurrentYear) by TechNobre</Copyright>

    <Description>Test project to create a nuget</Description>
    <PackageReleaseNotes>https://github.com/NelsonBN/test-nuget/blob/main/CHANGELOG.md</PackageReleaseNotes>
    <Summary>Test project to create a nuget</Summary>
    <PackageTags>TestProject;Utils;NuGet</PackageTags>
    <PackageProjectUrl>https://github.com/NelsonBN/test-nuget</PackageProjectUrl>
    <NeutralLanguage>en-GB</NeutralLanguage>

    <PackageOutputPath>bin\</PackageOutputPath>
  </PropertyGroup>

  
  <PropertyGroup>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/NelsonBN/test-nuget</RepositoryUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>
  
  
  <!-- DOCUMENTATION -->
  <PropertyGroup>
    <DocumentationFile>bin\TestProject.Utils.xml</DocumentationFile>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn> <!-- Prevent XML documentation warnings -->
  </PropertyGroup>


  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>$(AssemblyName).Tests</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>


  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DebugType>none</DebugType>
    <Optimize>true</Optimize>
    <DefineConstants>RELEASE</DefineConstants>
    <ErrorReport>none</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>


  <ItemGroup>
    <None Include="..\LICENSE" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All" />
  </ItemGroup>

</Project>
